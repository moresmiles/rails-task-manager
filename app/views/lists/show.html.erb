<h1><%= @list.name %></h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">Task Name</th>
      <th scope="col">Assigned To</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
    <% @list.tasks.each do |task|%>
    <tr>
      <th> <%=task.name%> </th>
      <td>
        <% if task.user_id %>
          <%= task.user.email %>
        <% else %>
          <%= 'Task is currently unassigned'%>
          <%= form_for(task, method: 'patch') do |f|%>
              <%= f.collection_select :user_id, @list.group.users, :id, :email %><br>
      	  <%= f.submit 'Assign'%>
          <% end %>
        <% end %>
      </td>
      <td><%=task.completed?%></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Edit List", edit_group_list_path, :class => 'btn btn-primary btn-mini' %>
