<h2> Create a New List </h2>

<%= form_for(@list) do |f| %>
<% if @list.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@list.errors.count, "error") %> prohibited this user from being saved:</h2>

    <ul>
    <% @list.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<p>
List <%= f.label :name %>
<%= f.text_field :name %>
</p>
<fieldset>
  <legend> New Task(s) </legend>
    <%= f.fields_for :tasks do |task_builder| %>
    Task <%= task_builder.label :name %>
    <%= task_builder.text_field :name %>
    <% end %>
</fieldset>
<br>
<fieldset>
  <legend> Or choose from existing tasks </legend>
    <%= f.collection_select :task_ids, Task.all, :id, :name %><br>
</fieldset>

<%= f.submit %>
<% end %>
