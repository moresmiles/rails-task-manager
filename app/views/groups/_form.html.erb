<%= form_for @group do |f| %>
<p>
<%= f.label :name, 'Group Name' %>
<%= f.text_field :name %>
</p>
<fieldset>
  <legend> Add a User by Email Address </legend>
  <%= f.fields_for :users do |user_finder| %>
    <%= user_finder.label :email %>
    <%= user_finder.email_field :email %>
  <% end %>
</fieldset>
<%= f.submit %>
<% end %>
