<% if !current_user%>
<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">Welcome to Rails Task Manager</h1>
      <p class="lead text-muted">An app to help you manage your tasks, made with Rails</p>
      <a href="<%=new_user_registration_path %>" class="btn btn-primary my-2">Sign Up</a>
      <a href="<%=new_user_session_path%>" class="btn btn-primary my-2">Sign In</a><br>
      <a href="<%=user_google_oauth2_omniauth_authorize_path%>" class="btn btn-primary my-2">Sign in with Google</a>
  </div>
</section>

<% else %>

<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">Welcome <%= current_user.email%>!</h1>
      <a href="<%=user_path(current_user)%>" class="btn btn-primary my-2">Your Groups</a>
      <a href="<%=new_group_path%>" class="btn btn-secondary my-2">Create a new group</a>
    </p>
  </div>
  </section>

<div class="container">
<div class="card-deck mb-3 text-center">
  <div class="card mb-4 box-shadow">
    <div class="card-header">
      <h4 class="my-0 font-weight-normal">Your Incompleted Tasks</h4>
    </div>
    <div class="row">
    <div class="col-sm-6">
        <div class="card-body">
          <h5 class="card-title">Incomplete Tasks</h5>
          <ul class="list-group list-group-flush">
            <% current_user.tasks.incomplete.each do |task| %>
          <li class="list-group-item"><%=task.name%> </li>
          <% end %>
          </ul>
          <br>
      </div>
    </div>
    <div class="col-sm-6">
        <div class="card-body">
          <h5 class="card-title">Corresponding List</h5>
          <ul class="list-group list-group-flush">
            <% current_user.tasks.incomplete.each do |task| %>
          <li class="list-group-item"><%=link_to task.list.name, group_list_path(task.list.group, task.list)%></li>
          <% end %>
          </ul>
          <br>
      </div>
    </div>
  </div>
<% end %>
